@model IEnumerable<Marfriing.Models.Pecuarista>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="nav-icon far fa-edit text-blue"></a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="nav-icon far fa-list-alt text-blue"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="nav-icon far fa-trash-alt text-blue"></a>
            </td>
        </tr>
}
    </tbody>
</table>
